---
layout: base.njk
---
<div x-data="{ activeStep: null, modalOpen: false, modalContent: null }">
    <header class="header">
        <h1>ML Development Cycle</h1>
        <p>A summary of resources and platforms for machine learning engineers, data analysts, and DevOps</p>
    </header>

    {% for step in range(1, 5) %}
    <section class="section">
        <h2>{{ steps[step - 1].title }}</h2>
        <div class="grid">
            {% for tool in tools %}
            {% if tool.Tag === 'step' + step %}
            <div 
                class="card" 
                style="background-color: {{ tool['Background Colour'] }}"
                @click="modalContent = $el.innerHTML; modalOpen = true"
            >
                <h3>{{ tool.title }}</h3>
                <p>{{ tool.content | safe }}</p>
                <a href="{{ tool['External Link'] }}" target="_blank">Learn more</a>
            </div>
            {% endif %}
            {% endfor %}
        </div>
    </section>
    {% endfor %}

    <!-- Modal -->
    <div 
        class="modal" 
        x-show="modalOpen" 
        @click.away="modalOpen = false"
        x-cloak
    >
        <div class="modal-content" x-html="modalContent">
        </div>
    </div>
</div>